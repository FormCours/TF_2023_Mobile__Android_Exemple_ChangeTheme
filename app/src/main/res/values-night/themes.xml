<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Test_theme_daynight" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorPrimaryDark">@color/primaryLight</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/primaryLight</item>
        <item name="colorControlActivated">@color/accent</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/primaryLight</item>

        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorHint">@color/accentLight</item>
        <item name="android:editTextColor">@color/accent</item>

    </style>
</resources>